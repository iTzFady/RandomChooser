<Window x:Class="RandomChooser.CustomWindow.Extended"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomChooser.CustomWindow" xmlns:controls="clr-namespace:RandomChooser.Controls"
        mc:Ignorable="d"
        Background="LightGray"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Title="Extended" Height="800" Width="1200"
        Icon="/Assets/Icons/monitors-icon.png">

    <Grid Margin="50">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="90*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" x:Name="ExtendedLabelText" Content="The Winner is" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="60" FontFamily="Calibri" FontWeight="Bold"/>
            <TextBlock Grid.Row="1" x:Name="Selected" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="150"
                   FontWeight="Bold"/>
    </Grid>
</Window>
