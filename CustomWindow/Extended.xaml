<Window x:Class="RandomChooser.CustomWindow.Extended"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RandomChooser.CustomWindow" xmlns:controls="clr-namespace:RandomChooser.Controls"
        mc:Ignorable="d"
        Background="LightGray"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        Title="Extended" Height="800" Width="1200">

    <Grid>
        <StackPanel Margin="0">
            <Label Grid.Row="0" Content="The Random Number is" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="60" Margin="80" FontFamily="Calibri" FontWeight="Bold"/>
            <TextBlock Grid.Row="1" x:Name="Number" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="250"
                   Text="0" FontWeight="Bold" Margin="0"/>
        </StackPanel>
    </Grid>
</Window>
