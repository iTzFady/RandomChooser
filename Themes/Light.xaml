<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush Color="LightGray" x:Key="Background"/>
    <SolidColorBrush Color="Black" x:Key="Foreground"/>
    <Color x:Key="ButtonBackgroundColor">Black</Color>
    <Color x:Key="ButtonForegroundColor">White</Color>
    <SolidColorBrush Color="{StaticResource ButtonBackgroundColor}" x:Key="ButtonBackground"/>
    <SolidColorBrush Color="{StaticResource ButtonForegroundColor}" x:Key="ButtomForeground"/>
</ResourceDictionary>